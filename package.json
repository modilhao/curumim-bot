{
  "name": "agencia-oca-assistente-pro",
  "version": "1.0.0",
  "description": "An AI-powered chat assistant for the 'agencia OCA' digital marketing agency.",
  "private": true,
  "type": "module",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "preinstall": "node -e \"const v=process.versions.node.split('.')[0]; if(+v<22){console.error('Node >= 22 é obrigatório'); process.exit(1)}\"",
    "dev": "vite",
    "dev:server": "node server.js",
    "dev:full": "concurrently \"npm run dev:server\" \"npm run dev\"",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "vercel-build": "npm run build"
  },
  "dependencies": {
    "@google/genai": "^1.20.0",
    "@google/generative-ai": "^0.21.0",
    "@netlify/functions": "^4.2.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.12.12",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.0"
  }
}
